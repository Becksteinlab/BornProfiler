# APBS input file generated by placeion
# for the complex and the ion at position (%(x)g,%(y)g,%(z)g)

READ
   mol pqr %(protein_pqr)s
   mol pqr %(ion_pqr)s
   mol pqr %(complex_pqr)s
END

ELEC name protein
  mg-auto
  mol 1
  dime %(DIME_XYZ)s
  cglen %(CGLEN_XYZ)s
  fglen %(FGLEN_XYZ)s    
  cgcent mol 3
  fgcent mol 2
  # NaCl ionic strength in mol/L
  ion  charge  1   conc %(conc)g  radius 0.95   # sodium ions
  ion  charge -1   conc %(conc)g  radius 1.81   # chloride ions
  lpbe
  bcfl mdh
  pdie %(pdie)g   # protein
  sdie %(sdie)g   # solvent
  srfm smol
  chgm spl2
  srad 1.4
  swin 0.3
  sdens 10.0
  temp %(temperature)g
  calcenergy total
  calcforce no
END

ELEC name ion
  mg-auto
  mol 2
  dime %(DIME_XYZ)s
  cglen %(CGLEN_XYZ)s
  fglen %(FGLEN_XYZ)s
  cgcent mol 3
  fgcent mol 2
  # NaCl ionic strength in mol/L
  ion  charge  1   conc %(conc)g  radius 0.95   # sodium ions
  ion  charge -1   conc %(conc)g  radius 1.81   # chloride ions
  lpbe
  bcfl mdh
  pdie %(pdie)g   # protein
  sdie %(sdie)g   # solvent
  srfm smol
  chgm spl2
  srad 1.4
  swin 0.3
  sdens 10.0
  temp %(temperature)g
  calcenergy total
  calcforce no
END

ELEC name complex
  mg-auto
  mol 3
  dime %(DIME_XYZ)s
  cglen %(CGLEN_XYZ)s
  fglen %(FGLEN_XYZ)s
  cgcent mol 3
  fgcent mol 2
  # NaCl ionic strength in mol/L
  ion  charge  1   conc %(conc)g  radius 0.95   # sodium ions
  ion  charge -1   conc %(conc)g  radius 1.81   # chloride ions
  lpbe
  bcfl mdh
  pdie %(pdie)g   # protein
  sdie %(sdie)g   # solvent
  srfm smol
  chgm spl2
  srad 1.4
  swin 0.3
  sdens 10.0
  temp %(temperature)g
  calcenergy total
  calcforce no
END



PRINT elecEnergy complex - ion - protein END
QUIT
