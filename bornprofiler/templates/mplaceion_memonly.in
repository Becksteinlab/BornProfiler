# APBS input file generated by placeion.py
# only for the ion (see example/parsegian) --- uses a neutral "fakeprotein"
# %(comment)s
# Uses a membrane and manual focusing in three steps.

READ
   # molecules
   # the protein is required to anchor the system; it is only
   # used for its position and thus can be a single atom
   # (This is a hack in order to be able to use the Membrane
   # BornProfiler scripts which always want a protein; when doing
   # things manually one could remove it and 'gcent' on the complex)
   mol pqr %(protein_pqr)s
   mol pqr %(ion_pqr)s
   mol pqr %(complex_pqr)s

   # NOTE: APBS 1.3 has a bug (at least on Mac OS X 10.6) that
   # prevents _reading_ of gzipped files so they need to be unzipped
   # before hand.
     
   # maps for complex
   diel %(dxformat)s dielx_cpx_Lm.%(dxsuffix)s diely_cpx_Lm.%(dxsuffix)s dielz_cpx_Lm.%(dxsuffix)s
   diel %(dxformat)s dielx_cpx_Mm.%(dxsuffix)s diely_cpx_Mm.%(dxsuffix)s dielz_cpx_Mm.%(dxsuffix)s
   diel %(dxformat)s dielx_cpx_Sm.%(dxsuffix)s diely_cpx_Sm.%(dxsuffix)s dielz_cpx_Sm.%(dxsuffix)s

   kappa %(dxformat)s kappa_cpx_Lm.%(dxsuffix)s
   kappa %(dxformat)s kappa_cpx_Mm.%(dxsuffix)s
   kappa %(dxformat)s kappa_cpx_Sm.%(dxsuffix)s

   charge %(dxformat)s charge_cpx_Lm.%(dxsuffix)s
   charge %(dxformat)s charge_cpx_Mm.%(dxsuffix)s
   charge %(dxformat)s charge_cpx_Sm.%(dxsuffix)s
END

# Focus each calculation in three steps


#------------------------------------------------------------
# Ion in solvent (mol 2)
#------------------------------------------------------------
#
# focusing step (1): whole system
# (note: no membrane because the reference state for our Born
# ion is the aqueous phase).
ELEC name ion_L
  mg-manual
  mol 2
  dime %(DIME_XYZ_L)s
  glen %(GLEN_XYZ_L)s
  gcent mol 1
  # NaCl ionic strength in mol/L
  ion  charge  1   conc %(conc).2f  radius 0.95   # sodium ions
  ion  charge -1   conc %(conc).2f  radius 1.81   # chloride ions
  lpbe
  bcfl zero
  pdie %(pdie)f
  sdie %(sdie)f
  srfm mol
  chgm spl2
  srad 1.4
  swin 0.3
  sdens 10.0
  temp %(temperature).2f
  calcenergy total
  calcforce no
END

# focus but now center on ion position (mol 2)
# and use potential from boundary of previous calc (bcfl focus)
ELEC name ion_M
  mg-manual
  mol 2
  dime %(DIME_XYZ_M)s
  glen %(GLEN_XYZ_M)s
  gcent mol 2
  # NaCl ionic strength in mol/L
  ion  charge  1   conc %(conc).2f  radius 0.95   # sodium ions
  ion  charge -1   conc %(conc).2f  radius 1.81   # chloride ions
  lpbe
  bcfl focus
  pdie %(pdie)f
  sdie %(sdie)f
  srfm mol
  chgm spl2
  srad 1.4
  swin 0.3
  sdens 10.0
  temp %(temperature).2f
  calcenergy total
  calcforce no
END

ELEC name ion_S
  mg-manual
  mol 2
  dime %(DIME_XYZ_S)s
  glen %(GLEN_XYZ_S)s
  gcent mol 2
  # NaCl ionic strength in mol/L
  ion  charge  1   conc %(conc).2f  radius 0.95   # sodium ions
  ion  charge -1   conc %(conc).2f  radius 1.81   # chloride ions
  lpbe
  bcfl focus
  pdie %(pdie)f
  sdie %(sdie)f
  srfm mol
  chgm spl2
  srad 1.4
  swin 0.3
  sdens 10.0
  temp %(temperature).2f
  calcenergy total
  calcforce no
END


#------------------------------------------------------------
# Complex ion in membrane (mol 3)
#------------------------------------------------------------
#
# Uses own set of maps
# focusing step (1): whole system
ELEC name complex_L
  mg-manual
  mol 3
  dime %(DIME_XYZ_L)s
  glen %(GLEN_XYZ_L)s
  gcent mol 1
  # NaCl ionic strength in mol/L
  ion  charge  1   conc %(conc).2f  radius 0.95   # sodium ions
  ion  charge -1   conc %(conc).2f  radius 1.81   # chloride ions
  lpbe
  bcfl zero
  pdie %(pdie)f
  sdie %(sdie)f
  srfm mol
  chgm spl2
  srad 1.4
  swin 0.3
  sdens 10.0
  temp %(temperature).2f
  calcenergy total
  calcforce no
  usemap diel 1-3
  usemap kappa 1
  usemap charge 1
END

# focus but now center on ion position (mol 2)
# and use potential from boundary of previous calc (bcfl focus)
ELEC name complex_M
  mg-manual
  mol 3
  dime %(DIME_XYZ_M)s
  nlev 4
  glen %(GLEN_XYZ_M)s
  gcent mol 2
  # NaCl ionic strength in mol/L
  ion  charge  1   conc %(conc).2f  radius 0.95   # sodium ions
  ion  charge -1   conc %(conc).2f  radius 1.81   # chloride ions
  lpbe
  bcfl focus
  pdie %(pdie)f
  sdie %(sdie)f
  srfm mol
  chgm spl2
  srad 1.4
  swin 0.3
  sdens 10.0
  temp %(temperature).2f
  calcenergy total
  calcforce no
  usemap diel 4-6
  usemap kappa 2
  usemap charge 2
END

ELEC name complex_S
  mg-manual
  mol 3
  dime %(DIME_XYZ_S)s
  glen %(GLEN_XYZ_S)s
  gcent mol 2
  # NaCl ionic strength in mol/L
  ion  charge  1   conc %(conc).2f  radius 0.95   # sodium ions
  ion  charge -1   conc %(conc).2f  radius 1.81   # chloride ions
  lpbe
  bcfl focus
  pdie %(pdie)f
  sdie %(sdie)f
  srfm mol
  chgm spl2
  srad 1.4
  swin 0.3
  sdens 10.0
  temp %(temperature).2f
  calcenergy total
  calcforce no
  usemap diel 7-9
  usemap kappa 3
  usemap charge 3
END


# Born free energy from the focused potentials
PRINT elecEnergy complex_S - ion_S END
QUIT

