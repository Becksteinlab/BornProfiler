# APBSmem: run simple 1st solvation
# (modified by OB)

read
    mol pqr "%(pqr)s"
    # Read Maps
    diel %(dxformat)s dielx%(suffix)sm.%(dxsuffix)s diely%(suffix)sm.%(dxsuffix)s dielz%(suffix)sm.%(dxsuffix)s
    kappa %(dxformat)s kappa%(suffix)sm.%(dxsuffix)s
    charge %(dxformat)s charge%(suffix)sm.%(dxsuffix)s
end

elec name solv0
    mg-manual
    dime %(DIME_XYZ)s
    glen %(GLEN_XYZ)s
    lpbe
    pdie %(pdie)f
    sdie %(sdie)f
    bcfl zero
    ion charge  1  conc %(conc)f  radius 0.95  # sodium
    ion charge -1  conc %(conc)f  radius 1.81  # chloride
    gcent 0 0 0
    mol 1
    chgm spl2
    srfm mol
    srad 1.4
    swin 0.3
    sdens 10
    temp %(temperature)f
    calcenergy total
    calcforce no
    write pot dx pot_solv0%(suffix)s
end

elec name ref0
    mg-manual
    dime %(DIME_XYZ)s
    glen %(GLEN_XYZ)s
    lpbe
    pdie %(pdie)f
    sdie %(sdie)f
    bcfl zero
    ion  charge  1   conc %(conc).2f  radius 0.95   # sodium ions
    ion  charge -1   conc %(conc).2f  radius 1.81   # chloride ions
    gcent 0 0 0
    mol 1
    chgm spl2
    srfm mol
    srad 1.4
    swin 0.3
    sdens 10
    temp %(temperature)f
    calcenergy total
    calcforce no
    usemap diel 1-3
    usemap kappa 1
    usemap charge 1
    write pot dx pot_ref%(suffix)s
end

print elecEnergy ref0 - solv0
end

quit
